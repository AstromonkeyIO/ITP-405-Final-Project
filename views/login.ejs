        function showSignUpCell() {
    
            $('#login-container').css("visibility", "hidden");
            $('#sign-up-container').css("visibility", "visible");
            $('#sign-up-container').css("zIndex", 1);
            $('#login-container').css("zIndex", -1); 
    
        }

        function showLoginCell() {
    
            $('#login-container').css("visibility", "visible");
            $('#sign-up-container').css("visibility", "hidden");
            $('#sign-up-container').css("zIndex", -1);
            $('#login-container').css("zIndex", 1); 

    
        }            
        </script>
    </body>
</html>